{
  "name": "sim-ui-use",
  "version": "0.1.0",
  "description": "这是一个 UI 框架",
  "main": "dist/index.js",
  "scripts": {
    "docs:dev": "vuepress dev docs",
    "docs:build": "vuepress build docs",
    "building": "npx parcel build index.js --no-minify",
    "start": "parcel index.html --no-cache",
    "dev-test": "parcel watch test/* --no-cache & karma start",
    "test": "parcel build test/* --no-cache --no-minify && karma start --single-run"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sulimi/sim-ui.git"
  },
  "keywords": [
    "vue",
    "ui"
  ],
  "author": "sumi",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/sulimi/sim-ui/issues"
  },
  "homepage": "https://github.com/sulimi/sim-ui#readme",
  "dependencies": {
    "vue": "^2.6.12",
    "vue-hot-reload-api": "^2.3.4"
  },
  "devDependencies": {
    "@goy/vuepress-plugin-svg-icons": "^4.2.1",
    "@vue/component-compiler-utils": "^3.2.0",
    "chai": "^4.2.0",
    "chai-spies": "^1.0.0",
    "karma": "^5.2.3",
    "karma-chai": "^0.1.0",
    "karma-chai-spies": "^0.1.4",
    "karma-chrome-launcher": "^3.1.0",
    "karma-mocha": "^2.0.1",
    "karma-sinon-chai": "^2.0.2",
    "marked": "^1.2.0",
    "mocha": "^8.1.3",
    "parcel-bundler": "^1.12.4",
    "sass": "^1.27.0",
    "sass-loader": "^10.0.3",
    "sinon": "^9.2.0",
    "sinon-chai": "^3.5.0",
    "vue-template-compiler": "^2.6.12",
    "vuepress": "^1.7.1"
  },
  "alias": {
    "vue": "./node_modules/vue/dist/vue.common.js"
  },
  "directories": {
    "doc": "docs",
    "test": "test"
  }
}
